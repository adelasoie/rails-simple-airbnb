<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All our Flats (<%= @flats.size %>)</h1>

    <div class="d-flex gap-2">
      <%= form_with url: flats_path, method: :get, local: true, class: "d-flex" do %>
        <input type="text" name="query" value="<%= params[:query] %>" class="form-control me-2" placeholder="Search by name or address">
        <button class="btn btn-outline-success">Search</button>
      <% end %>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row g-4">
    <% @flats.each do |flat| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
          <% if flat.picture_url.present? %>
          <%= image_tag flat.picture_url, class: "card-img-top", alt: flat.name %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="text-muted mb-2"><%= flat.address %></p>
            <p class="mb-0">
              ðŸ‘¥ <%= flat.number_of_guests %> &nbsp;
              â‚¬ <%= flat.price_per_night %>
            </p>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between">
            <%= link_to "More info", flat_path(flat), class: "btn btn-sm btn-outline-primary" %>
            <div class="d-flex gap-2">
              <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Remove", flat_path(flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
