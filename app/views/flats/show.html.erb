<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @flat.name %></h1>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-outline-secondary" %>
      <%= link_to "Remove", flat_path(@flat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
      <%= link_to "Back", flats_path, class: "btn btn-link" %>
    </div>
  </div>

  <% if @flat.picture_url.present? %>
    <img src="<%= @flat.picture_url %>" class="img-fluid rounded mb-4" alt="<%= @flat.name %>">
  <% end %>

  <p class="mb-1"><strong>Address:</strong> <%= @flat.address %></p>
  <p class="mb-1"><strong>Guests:</strong> <%= @flat.number_of_guests %></p>
  <p class="mb-3"><strong>Price per night:</strong> â‚¬ <%= @flat.price_per_night %></p>

  <p><%= @flat.description %></p>
</div>
